<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="textInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxStrokeColor">@color/darker_gray</item>
        <item name="boxStrokeWidth">10dp</item>
        <item name="boxBackgroundColor">@color/black</item>
        <item name="boxCollapsedPaddingTop">8dp</item>
        <item name="hintEnabled">true</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#3E7BFA</item>
    </style>

    <style name="ErrorTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/poppinsmedium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.OnboardingActivity" parent="Base.Theme.Travelid">
        <item name="android:statusBarColor">#3E7BFA</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:navigationBarColor">#0B51E1</item>
    </style>

    <style name="Theme.LoginActivity" parent="Base.Theme.Travelid">
        <item name="android:statusBarColor">#3E7BFA</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="travelcity">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="txt_details">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="txt_list_date">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="txt_list_price">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFD43A</item>
    </style>

    <style name="txt_airline_name">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="txt_travel_price">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#CB3A31</item>
    </style>

    <style name="txt_graylabel">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#757575</item>
    </style>
    <style name="txt_transit">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#18AF5E</item>
    </style>

    <style name="txt_timelabel">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#333333</item>
    </style>

</resources>