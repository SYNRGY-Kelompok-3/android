<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:orientation="horizontal"
    android:layout_marginBottom="16dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_atc_rv_post"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:layout_marginRight="8dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius="8dp"
        android:src="@drawable/img_test_article" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_atc_post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10 Rekomendasi Tempat Wisata Di Jawa Timur"
            android:textSize="14sp"
            android:fontFamily="@font/poppinsmedium"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:maxLines="2"
            android:includeFontPadding="false"/>

        <TextView
            android:id="@+id/tv_atc_post_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bali merupakan surga wisata bagi wisatawan lokal dan asing. Banyak dari mereka yang berkunjung kesini setiap tahunnya. Pulau Dewata ini memberikan berbagai bentuk wisata yang wajib dikunjungi orang-orang dari pantai"
            android:textSize="12sp"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/darker_gray"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="4dp"
            android:includeFontPadding="false"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tv_atc_post_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wisata"
                android:textSize="12sp"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="@color/primary_blue"
                android:includeFontPadding="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" â€¢ "
                android:textSize="12sp"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="#334155"
                android:includeFontPadding="false"/>

            <TextView
                android:id="@+id/tv_atc_post_readtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 min read"
                android:textSize="12sp"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="@color/black"
                android:includeFontPadding="false"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </LinearLayout>

</LinearLayout>
