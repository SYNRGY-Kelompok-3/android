<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".presentation.home.SearchTicketFragment">

    <TextView
        android:id="@+id/tv_maupergikemana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppinssemibold"
        android:lineSpacingExtra="-1sp"
        android:text="Mau Pergi Kemana"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.097"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tfl_origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusTopStart="12dp"
        app:boxStrokeColor="@color/text_input_box_stroke"
        app:errorTextAppearance="@style/ErrorTextAppearance"
        app:hintEnabled="false"
        app:layout_constraintStart_toEndOf="@id/tv_maupergikemana"
        app:layout_constraintStart_toStartOf="@+id/tv_maupergikemana"
        app:layout_constraintTop_toBottomOf="@+id/tv_maupergikemana">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_origin"
            android:layout_width="361dp"
            android:layout_height="56dp"
            android:fontFamily="@font/poppinsmedium"
            android:gravity="start|center_vertical"
            android:hint="Masukkan Lokasi Awal"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:paddingTop="15dp"
            android:paddingBottom="0dp"
            android:textSize="15sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppinsmedium"
        android:includeFontPadding="false"
        android:text="Dari"
        android:textColor="#3E7BFA"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tfl_origin"
        app:layout_constraintTop_toTopOf="@+id/tfl_origin" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tfl_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusTopStart="12dp"
        app:boxStrokeColor="@color/text_input_box_stroke"
        app:errorTextAppearance="@style/ErrorTextAppearance"
        app:hintEnabled="false"
        app:layout_constraintStart_toEndOf="@id/tfl_origin"
        app:layout_constraintStart_toStartOf="@+id/tfl_origin"
        app:layout_constraintTop_toBottomOf="@+id/tfl_origin">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_destination"
            android:layout_width="361dp"
            android:layout_height="56dp"
            android:fontFamily="@font/poppinsmedium"
            android:gravity="start|center_vertical"
            android:hint="Masukkan Lokasi Tujuan"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:paddingTop="15dp"
            android:paddingBottom="0dp"
            android:textSize="15sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppinsmedium"
        android:includeFontPadding="false"
        android:text="Ke"
        android:textColor="#3E7BFA"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tfl_destination"
        app:layout_constraintTop_toTopOf="@+id/tfl_destination" />

    <TextView
        android:id="@+id/tv_pulangpergi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppinsmedium"
        android:lineSpacingExtra="-1sp"
        android:text="Pulang dan Pergi?"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_maupergikemana"
        app:layout_constraintTop_toBottomOf="@+id/tfl_destination" />

    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/switch_material"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        app:layout_constraintBottom_toBottomOf="@+id/tv_pulangpergi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.878"
        app:layout_constraintStart_toEndOf="@+id/tv_pulangpergi"
        app:layout_constraintTop_toTopOf="@+id/tv_pulangpergi" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tfl_arrivaldate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusTopStart="12dp"
        app:boxStrokeColor="@color/text_input_box_stroke"
        app:errorTextAppearance="@style/ErrorTextAppearance"
        app:hintEnabled="false"
        app:layout_constraintStart_toEndOf="@id/tv_pulangpergi"
        app:layout_constraintStart_toStartOf="@+id/tv_pulangpergi"
        app:layout_constraintTop_toBottomOf="@+id/tv_pulangpergi">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_arrivaldate"
            android:layout_width="173dp"
            android:layout_height="56dp"
            android:fontFamily="@font/poppinsmedium"
            android:gravity="start|center_vertical"
            android:hint="Pilih Tanggal"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:paddingTop="15dp"
            android:paddingBottom="0dp"
            android:textSize="15sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppinsmedium"
        android:includeFontPadding="false"
        android:text="Tanggal Pergi"
        android:textColor="#3E7BFA"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tfl_arrivaldate"
        app:layout_constraintTop_toTopOf="@+id/tfl_arrivaldate" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tfl_departuredate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusTopStart="12dp"
        app:boxStrokeColor="@color/text_input_box_stroke"
        app:errorTextAppearance="@style/ErrorTextAppearance"
        app:hintEnabled="false"
        app:layout_constraintBottom_toBottomOf="@+id/tfl_arrivaldate"
        app:layout_constraintEnd_toEndOf="@+id/tfl_destination"
        app:layout_constraintStart_toEndOf="@+id/tfl_arrivaldate"
        app:layout_constraintTop_toTopOf="@+id/tfl_arrivaldate">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_departuredate"
            android:layout_width="173dp"
            android:layout_height="56dp"
            android:fontFamily="@font/poppinsmedium"
            android:gravity="start|center_vertical"
            android:hint="Pilih Tanggal"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:paddingTop="15dp"
            android:paddingBottom="0dp"
            android:textSize="15sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppinsmedium"
        android:includeFontPadding="false"
        android:text="Tanggal Pulang"
        android:textColor="#3E7BFA"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tfl_departuredate"
        app:layout_constraintTop_toTopOf="@+id/tfl_departuredate" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tfl_amountpassenger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusTopStart="12dp"
        app:boxStrokeColor="@color/text_input_box_stroke"
        app:errorTextAppearance="@style/ErrorTextAppearance"
        app:hintEnabled="false"
        app:layout_constraintStart_toEndOf="@id/tfl_arrivaldate"
        app:layout_constraintStart_toStartOf="@+id/tfl_arrivaldate"
        app:layout_constraintTop_toBottomOf="@+id/tfl_arrivaldate">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_amountpassenger"
            android:layout_width="361dp"
            android:layout_height="56dp"
            android:fontFamily="@font/poppinsmedium"
            android:gravity="start|center_vertical"
            android:hint="Pilih Jumlah Penumpang"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:paddingTop="15dp"
            android:paddingBottom="0dp"
            android:textSize="15sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppinsmedium"
        android:includeFontPadding="false"
        android:text="Jumlah Penumpang"
        android:textColor="#3E7BFA"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tfl_amountpassenger"
        app:layout_constraintTop_toTopOf="@+id/tfl_amountpassenger" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tfl_flightclass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusTopStart="12dp"
        app:boxStrokeColor="@color/text_input_box_stroke"
        app:errorTextAppearance="@style/ErrorTextAppearance"
        app:hintEnabled="false"
        app:layout_constraintStart_toEndOf="@id/tfl_amountpassenger"
        app:layout_constraintStart_toStartOf="@+id/tfl_amountpassenger"
        app:layout_constraintTop_toBottomOf="@+id/tfl_amountpassenger">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_flightclass"
            android:layout_width="361dp"
            android:layout_height="56dp"
            android:fontFamily="@font/poppinsmedium"
            android:gravity="start|center_vertical"
            android:hint="Pilih Kelas Penerbangan"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:paddingTop="15dp"
            android:paddingBottom="0dp"
            android:textSize="15sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppinsmedium"
        android:includeFontPadding="false"
        android:text="Kelas Penerbangan"
        android:textColor="#3E7BFA"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tfl_flightclass"
        app:layout_constraintTop_toTopOf="@+id/tfl_flightclass" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_searching"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginHorizontal="16dp"
        android:backgroundTint="#3E7BFA"
        android:fontFamily="@font/poppinssemibold"
        android:includeFontPadding="false"
        android:text="Cari Tiket"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:cornerRadius="12dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@id/tfl_flightclass"
        app:layout_constraintStart_toStartOf="@id/tfl_flightclass"
        app:layout_constraintTop_toBottomOf="@+id/tfl_flightclass" />




</androidx.constraintlayout.widget.ConstraintLayout>